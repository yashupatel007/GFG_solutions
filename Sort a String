https://www.geeksforgeeks.org/problems/sort-a-string2943/1

string sort(string s) {
    // complete the function here
    vector<int>ans(26,0);
    for(int i=0;i<s.size();i++){
        ans[s[i]-'a']++;  // count the frequency of character
    }
    string res;
    for(int i=0;i<26;i++){ 
        char c='a'+i; // print the character in ascending order
        while(ans[i]){ // print how many times it occur
            res+=c;
            ans[i]--;
        }
    }
    return res;
}
