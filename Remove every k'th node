http://geeksforgeeks.org/problems/remove-every-kth-node/1
/* Link list Node

struct Node
{
    int data;
    struct Node* next;

    Node(int x){
        data = x;
        next = NULL;
    }

};
*/

/*You are required to complete this method*/

/* Function to get the middle of the linked list*/
/*K will always be in range */
class Solution {
  public:
    Node* deleteK(Node* head, int k) {
        // code here
        if(k==1)
            return NULL;
        int count=1;
        Node *prev=NULL;
        Node *curr=head;
        while(curr!=NULL)
        {
            if(count==k)
            {
                prev->next=curr->next;
                delete curr;
                curr=prev->next;
                count=1;
            }
            else
            {
                prev=curr;
                curr=curr->next;
                count++;
            }
        }
        return head;
    }
};
